
@{
    ViewBag.Title = "Infor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h4 class="mt-1">Thông tin cá nhân</h4>

        <div class="card mb-4">
            <div class="card-header">
                @if (ViewBag.Msg != null)
                {
                    if (ViewBag.Msg == "1")
                    {
                        <div class="alert alert-success">
                            <strong>Thành công</strong>
                        </div>
                    }
                }
            </div>

            <div class="card-body">
                @{var item = Model;}
                <form method="POST" action="/User/UpdateInfor" class="register-form" id="register-form">
                    <input type="hidden" class="form-control" id="id" name="idUser" value="@item.idUser">
                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Họ Và Tên:</label>
                                <input type="text" class="form-control" id="category-film" value="@item.fullName" name="fullName">
                            </div>
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Username:</label>
                                <input type="text" class="form-control" id="category-film" value="@item.userName" name="userName" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Phòng ban:</label>
                                <input type="text" class="form-control" id="category-film" value="@item.Group.name" name="" readonly>
                                <input type="hidden" class="form-control" id="category-film" value="@item.idGroup" name="idGroup" >
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Số điện thoại:</label>
                                <input type="text" class="form-control" id="category-film" value="@item.phoneNumber" name="phoneNumber">
                            </div>
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Mật khẩu:</label>
                                <input type="text" class="form-control" id="category-film" value="@item.password" name="password">
                            </div>
                            <div class="mb-3">
                                <label for="category-film"
                                       class="col-form-label">Giới tính:</label>
                                <select class="form-select" name="gender" required aria-label="Default select example">
                                    @if (item.gender == "Nam")
                                    {
                                        <option value="Nữ">Nữ</option>
                                        <option value="Nam" selected>Nam</option>
                                    }
                                    else
                                    {
                                        <option value="Nữ" selected>Nữ</option>
                                        <option value="Nam">Nam</option>
                                    }

                                </select>

                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="category-film"
                                   class="col-form-label">Địa chỉ:</label>
                            <input type="text" class="form-control" id="category-film" value="@item.address" name="address">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>


